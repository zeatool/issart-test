{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Product</h1>
    <div class="btn-group">
        <a class="btn btn-default" href="{{ path('product_index') }}"><i class="glyphicon glyphicon-arrow-left"></i> Back to the list</a>
        <a class="btn btn-default" href="{{ path('product_edit', { 'id': product.id }) }}"><i class="glyphicon glyphicon-edit"></i> Edit</a>
        {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i> Delete</button>
        {{ form_end(delete_form) }}
    </div>
    <div class="row">
        <div class="col-xs-4">
            {% if product.image == '' %}
                <img src="{{ image('assets/images/no_photo.jpg').resize(350,350) }}" alt=""/>
            {% else %}
                <img src="{{ image('uploads/images/' ~ product.image).resize(350,350) }}" alt=""/>
            {% endif %}
        </div>
        <div class="col-xs-8">
            <table class="table table-stripped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
